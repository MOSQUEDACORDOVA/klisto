<div class="min-h-screen flex flex-col sm:justify-center items-center pt-6 sm:pt-0 bg-gray-100">
  <div>{{#if messages}}
		{{#showAlerts messages}}
		{{/showAlerts}}
	{{/if}}</div>
  <div class="w-full sm:max-w-3xl mt-6 px-6 py-4 bg-white shadow-md overflow-hidden sm:rounded-lg">
    <!---->
    <form action="/reg_cliente" method="post">
      <center>
        <img src="../assets/img/logo_fondo_claro.png" width="140" />
      </center>
      <div class="row">
        <div class="col-lg-12">
          <!---->
          <div class="card">
            <div class="card-body">
              <p>
                <strong>
                  Registrarme como
                  cliente
                </strong>
              </p>
              <div class="form-group">
                <label class="block font-medium text-sm text-gray-700" for="name_client">
                  <span>
                    Nombre
                  </span>
                </label>
                <input
                  class="border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 rounded-md shadow-sm mt-1 block w-full"
                  type="text" name="name_client" />
              </div>
              <div class="form-group">
                <label class="block font-medium text-sm text-gray-700" for="email_client">
                  <span>
                    Correo
                  </span>
                </label>
                <input
                  class="border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 rounded-md shadow-sm mt-1 block w-full"
                  type="email" name="email_client" />
              </div>
              <div class="form-group">
                <label class="block font-medium text-sm text-gray-700" for="password">
                  <span>
                    Contraseña
                  </span>
                </label>
                <input
                  class="border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 rounded-md shadow-sm mt-1 block w-full"
                  id="password" type="password" autocomplete="new-password" name="password"/>
              </div>
              <div class="form-group">
                <label class="block font-medium text-sm text-gray-700" for="password_confirmation">
                  <span>
                    Confirmar Contraseña
                  </span>
                </label>
                <input
                  class="border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 rounded-md shadow-sm mt-1 block w-full"
                  id="password_confirmation" type="password" autocomplete="new-password" name="confirmPassword"/>
              </div>
              <div style="display: none;">
             
             <div class="mt-4">
                <label class="block font-medium text-sm text-gray-700" for="bank_id">
                  <span>
                    Banco
                  </span>
                </label>
                <select class="form-control select2" name="bank_id">
                  <option value="BBVA">
                    BBVA
                  </option>
                  <option value="ICBC PERU BANK">
                    ICBC PERU BANK
                  </option>
                </select>
              </div>
              <div class="mb-4 mt-4">
                <label class="block font-medium text-sm text-gray-700" for="count_bank">
                  <span>
                    Número de cuenta
                  </span>
                </label>
                <input
                  class="border-gray-300 focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 rounded-md shadow-sm mt-1 block w-full"
                  type="number" id="count_bank" name="cuenta_num"/>
              </div>
   
              </div>

              <div class="float-right mt-4">
                <button type="submit"
                  class="items-center px-4 py-2 bg-gray-800 border border-transparent rounded-md font-semibold text-xs text-white uppercase tracking-widest hover:bg-gray-700 active:bg-gray-900 focus:outline-none focus:border-gray-900 focus:ring focus:ring-gray-300 disabled:opacity-25 transition btn btn-success text-white">
                  Registrar
                </button>
              </div>
            </div>
          </div>
          <!---->
        </div>
      </div>
      <div class="items-center mt-4">
        <center>
          <a class="underline text-sm text-gray-600 hover:text-gray-900" href="/login">
            Ya está registrado?
          </a>
        </center>
      </div>
    </form>
  </div>
</div>